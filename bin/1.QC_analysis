#!bin/bash
##########################################################################
#This script is designed for analyze the quality of raw reads
##########################################################################

##Create directories to store output files
mkdir -p ../fastqc_output
mkdir -p ../multiquc_output

##Run fastqc
fastqc ../data/*.fastq.gz -o ../fastqc_output

##Run multiqc
multiqc ../fastqc_output/*.zip -o ../multiquc_output